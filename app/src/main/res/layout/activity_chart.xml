<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111A23"
    tools:context=".activity.Chart">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chartColones"
        android:layout_width="wrap_content"
        android:layout_height="307dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="0dp"
        android:background="#111A23"></com.github.mikephil.charting.charts.PieChart>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chartDollars"
        android:layout_width="389dp"
        android:layout_height="402dp"
        android:layout_below="@+id/chartColones"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        android:background="#111A23"></com.github.mikephil.charting.charts.PieChart>

</RelativeLayout>